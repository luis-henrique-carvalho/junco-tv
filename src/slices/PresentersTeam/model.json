{
  "id": "presenters_team",
  "type": "SharedSlice",
  "name": "PresentersTeam",
  "description": "PresentersTeam",
  "variations": [
    {
      "id": "default",
      "name": "Default",
      "docURL": "...",
      "version": "initial",
      "description": "Default",
      "imageUrl": "",
      "primary": {
        "title": {
          "type": "Text",
          "config": {
            "label": "Title ",
            "placeholder": "Nossa Equipe"
          }
        },
        "description": {
          "type": "StructuredText",
          "config": {
            "label": "Description",
            "placeholder": "Conheça os apresentadores...",
            "allowTargetBlank": true,
            "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
          }
        },
        "presenters": {
          "type": "Group",
          "config": {
            "label": "Presenters",
            "repeat": true,
            "fields": {
              "presenter_name": {
                "type": "Text",
                "config": {
                  "label": "Presenter Name ",
                  "placeholder": "Nome do Apresentador "
                }
              },
              "presenter_role": {
                "type": "Text",
                "config": {
                  "label": "Presenter Role",
                  "placeholder": "Cargo/Função "
                }
              },
              "presenter_bio": {
                "type": "StructuredText",
                "config": {
                  "label": "Presenter Bio ",
                  "placeholder": "Biografia do apresentador...",
                  "allowTargetBlank": true,
                  "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
                }
              },
              "presenter_photo": {
                "type": "Image",
                "config": {
                  "label": "Presenter Photo ",
                  "constraint": {},
                  "thumbnails": []
                }
              },
              "presenter_social_links": {
                "type": "Group",
                "config": {
                  "label": "Social Links",
                  "repeat": true,
                  "fields": {
                    "social_platform": {
                      "type": "Select",
                      "config": {
                        "label": "Social Platform",
                        "placeholder": "Escolha a plataforma",
                        "options": [
                          "Instagram",
                          "Twitter",
                          "LinkedIn",
                          "Facebook",
                          "YouTube",
                          "TikTok",
                          "Website"
                        ]
                      }
                    },
                    "social_url": {
                      "type": "Link",
                      "config": {
                        "label": "Social URL",
                        "placeholder": "URL da rede social",
                        "allowTargetBlank": true,
                        "allowText": false,
                        "select": null
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "items": {}
    }
