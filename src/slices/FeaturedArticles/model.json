{
    "id": "featured_articles",
    "type": "SharedSlice",
    "name": "FeaturedArticles",
    "description": "Section displaying featured news articles",
    "variations": [
        {
            "id": "default",
            "name": "Default",
            "docURL": "...",
            "version": "initial",
            "description": "Featured articles grid with customizable layout",
            "imageUrl": "",
            "primary": {
                "section_title": {
                    "type": "Text",
                    "config": {
                        "label": "Section Title",
                        "placeholder": "Notícias em Destaque"
                    }
                },
                "section_description": {
                    "type": "StructuredText",
                    "config": {
                        "label": "Section Description",
                        "placeholder": "As principais notícias selecionadas pela redação...",
                        "allowTargetBlank": true,
                        "multi": "paragraph,strong,em,hyperlink"
                    }
                },
                "max_articles": {
                    "type": "Number",
                    "config": {
                        "label": "Max Articles to Show",
                        "placeholder": "6"
                    }
                },
                "show_category_filter": {
                    "type": "Boolean",
                    "config": {
                        "label": "Show Category Filter",
                        "placeholder_false": "Não",
                        "placeholder_true": "Sim",
                        "default_value": false
                    }
                },
                "layout_style": {
                    "type": "Select",
                    "config": {
                        "label": "Layout Style",
                        "placeholder": "Escolha o estilo",
                        "options": [
                            "Grid",
                            "Carousel",
                            "List"
                        ]
                    }
                }
            },
            "items": {}
        }
    ]
}
